@model UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutBookDetails";
}

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4 p-5" style="background-color:orange;">
        <h1 class="text-center">Login</h1>
        <form asp-action="Login" asp-controller="Account">
            @if (ViewBag.ErrorMsgLogin == true)
            {
                <span class="text-danger">Username/Password incorrect</span>
            }
            <div class="form-group m-1">
                <label asp-for="User.Username" class="control-label"></label>
                <input asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="User.Password" class="control-label"></label>
                <input type="password" asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center m-1">
                <input type="submit" value="Login" class="btn btn-primary m-3" />
            </div>
            <div class="text-center">
                <p>Not a member? <a href="/Account/Register">Register</a></p>
            </div>
        </form>
    </div>
</div>